{
  "manifest_version": 3,
  "name": "Instagram Auto-Reel Scroller",
  "version": "1.0",
  "description": "Automatically scrolls to the next Reel on Instagram when the current one finishes.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/reels/*", "*://*.instagram.com/"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {

      "128": "icon.png"
    },
    "default_title": "Auto-Reel Scroller"
  },
  "icons": {
  
    "128": "icon.png"
  }
}
